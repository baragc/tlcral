<div class="row">
  <% @restaurants.each do |restaurant| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= image_tag restaurant.image.url %>
      <div class="caption">
        <h3><%= restaurant.name %></h3>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone %></p>
        <p><%= restaurant.website %></p>
        <%= link_to 'Show', restaurant, class: "btn btn-link" %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-link" %>
        <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-link" %>
